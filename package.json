{
  "name": "react-shopping-list",
  "version": "1.0.4",
  "description": "A shopping list app built with the MERN stack for a Traversy Media course.",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server-start": "nodemon server",
    "client-start": "yarn --cwd client start",
    "client-install": "yarn --cwd client",
    "devtools-start": "npx react-devtools",
    "build": "yarn --cwd client install && yarn --cwd client build",
    "dev": "concurrently --names 'SERVER,CLIENT,DEVTOOLS' -c 'bgBlue.bold,bgMagenta.bold,bgCyan.bold' npm:server-start npm:client-start npm:devtools-start"
  },
  "repository": "https://github.com/claudiorivera/react-shopping-list",
  "author": "Claudio Rivera",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.12"
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "react-devtools": "^4.7.0"
  }
}
